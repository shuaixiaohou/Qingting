<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableLoadMore="false"
        app:srlEnableNestedScrolling="true"
        app:srlEnablePreviewInEditMode="false">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    app:indicator_drawable_unselected="@drawable/shap_home_banner_dot"
                    app:indicator_height="7dp"
                    app:indicator_margin="3dp"
                    app:indicator_width="7dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_rank"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    app:bl_corners_radius="20dp"
                                    app:bl_solid_color="#d5a6bd">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_hot_phb"
                                        android:tint="@color/white" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="经典必听"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_sleep"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    app:bl_corners_radius="20dp"
                                    app:bl_solid_color="#a2c4c9">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_hot_jp"
                                        android:tint="@color/white" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="助眠解压"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_love"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    app:bl_corners_radius="20dp"
                                    app:bl_solid_color="#f9cb9c">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_hot_dfhy"
                                        android:tint="@color/white" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="情感生活"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_hot"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    app:bl_corners_radius="20dp"
                                    app:bl_solid_color="#b6d7a8">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_hot_tqy"
                                        android:tint="@color/white" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="热门音乐"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_free"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    app:bl_corners_radius="20dp"
                                    app:bl_solid_color="#a4c2f4">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_hot_xyyx"
                                        android:tint="@color/white" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="免费小说"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_english"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    app:bl_corners_radius="20dp"
                                    app:bl_solid_color="#ffe599">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_hot_td"
                                        android:tint="@color/white" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="英语学习"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_xiangsheng"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    app:bl_corners_radius="20dp"
                                    app:bl_solid_color="#a4c2f4">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_hot_jrbt"
                                        android:tint="@color/white" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="相声评书"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_xiaohua"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    app:bl_corners_radius="20dp"
                                    app:bl_solid_color="#b6d7a8">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_hot_btbd"
                                        android:tint="@color/white" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="笑话段子"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_ertong"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    app:bl_corners_radius="20dp"
                                    app:bl_solid_color="#ff0000">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_hot_rmfx"
                                        android:tint="@color/white" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="儿童故事"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <View
                        android:id="@+id/line1"
                        style="@style/PrimaryHLine"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/horizontalScrollView" />

                    <com.housaiying.qingting.common.widget.ItemHeader
                        android:id="@+id/ih_like"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:ih_right_text="更多"
                        app:ih_title="猜你喜欢"
                        app:layout_constraintTop_toBottomOf="@id/line1" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_like"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        app:layout_constraintTop_toBottomOf="@id/ih_like" />

                    <include
                        android:id="@+id/like_refresh"
                        layout="@layout/home_layout_item_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/rv_like" />

                    <View
                        android:id="@+id/line2"
                        style="@style/PrimaryHLine"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/like_refresh" />

                    <com.housaiying.qingting.common.widget.ItemHeader
                        android:id="@+id/ih_story"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:ih_right_text="更多"
                        app:ih_title="最热有声小说"
                        app:layout_constraintTop_toBottomOf="@id/line2" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_story"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/ih_story" />

                    <include
                        android:id="@+id/story_refresh"
                        layout="@layout/home_layout_item_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/rv_story" />

                    <View
                        android:id="@+id/line3"
                        style="@style/PrimaryHLine"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/story_refresh" />

                    <com.housaiying.qingting.common.widget.ItemHeader
                        android:id="@+id/ih_baby"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:ih_right_text="更多"
                        app:ih_title="宝贝最爱听"
                        app:layout_constraintTop_toBottomOf="@id/line3" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_baby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/ih_baby" />

                    <include
                        android:id="@+id/baby_refresh"
                        layout="@layout/home_layout_item_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/rv_baby" />

                    <View
                        android:id="@+id/line4"
                        style="@style/PrimaryHLine"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/baby_refresh" />

                    <LinearLayout
                        android:id="@+id/layout_ad"
                        android:layout_width="match_parent"
                        android:layout_height="169dp"

                        android:orientation="vertical"
                        android:paddingLeft="11dp"
                        android:paddingTop="8dp"
                        android:paddingRight="11dp"
                        app:layout_constraintTop_toBottomOf="@id/line4">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="113dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/home_hot_ad"
                            app:riv_corner_radius="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:gravity="center_vertical"
                            android:text="小雅音响"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="14dp"
                            android:gravity="center_vertical"
                            android:text="你家里的有声图书馆，点击购买！"
                            android:textColor="@color/colorGray"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <com.housaiying.qingting.common.widget.ItemHeader
                        android:id="@+id/ih_topic"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        app:ih_right_text="更多"
                        app:ih_title="精选专题"
                        app:layout_constraintTop_toBottomOf="@id/layout_ad" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/ih_topic" />

                    <include
                        android:id="@+id/topic_refresh"
                        layout="@layout/home_layout_item_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/rv_topic" />

                    <View
                        android:id="@+id/line5"
                        style="@style/PrimaryHLine"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/topic_refresh" />

                    <com.housaiying.qingting.common.widget.ItemHeader
                        android:id="@+id/ih_music"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:ih_right_text="更多"
                        app:ih_title="音乐好时光"
                        app:layout_constraintTop_toBottomOf="@id/line5" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:nestedScrollingEnabled="false"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        app:layout_constraintTop_toBottomOf="@id/ih_music" />

                    <include
                        android:id="@+id/music_refresh"
                        layout="@layout/home_layout_item_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/rv_music" />

                    <View
                        android:id="@+id/line6"
                        style="@style/PrimaryHLine"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/music_refresh" />

                    <com.housaiying.qingting.common.widget.ItemHeader
                        android:id="@+id/ih_radio"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:ih_right_text="更多"
                        app:ih_title="电台"
                        app:layout_constraintTop_toBottomOf="@id/line6" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/ih_radio" />

                    <include
                        android:id="@+id/radio_refresh"
                        layout="@layout/home_layout_item_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/rv_radio" />

                    <View
                        android:id="@+id/line7"
                        style="@style/PrimaryHLine"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/radio_refresh" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</layout>