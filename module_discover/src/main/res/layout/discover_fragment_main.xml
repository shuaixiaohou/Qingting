<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableLoadMore="false"
        app:srlEnableNestedScrolling="true"
        app:srlEnablePreviewInEditMode="false"
        app:srlEnableRefresh="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    style="@style/PrimaryHLine"
                    android:layout_width="match_parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_ffjp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:tag="https://m.ximalaya.com/">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="16dp"
                        android:tint="#b6d7a8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_discover_ffjp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="疫情"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_common_more_arrow" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="了解实时疫情，做好安全防护"
                        android:textColor="@color/colorGray"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                        app:layout_constraintEnd_toStartOf="@+id/imageView8"
                        app:layout_constraintTop_toTopOf="@+id/imageView8" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    style="@style/PrimaryHLine"
                    android:layout_width="match_parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_qmld"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:tag="https://m.ximalaya.com/">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="16dp"
                        android:tint="#ea9999"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_discover_qmld" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="专家讲解"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                        app:layout_constraintStart_toEndOf="@+id/imageView1"
                        app:layout_constraintTop_toTopOf="@+id/imageView1" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_common_more_arrow" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="28dp"
                        android:layout_height="17dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="NEW"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:bl_corners_radius="2dp"
                        app:bl_solid_color="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                        app:layout_constraintEnd_toStartOf="@+id/imageView9"
                        app:layout_constraintTop_toTopOf="@+id/imageView9" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    style="@style/SecondHLine"
                    android:layout_width="match_parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_tyq"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:tag="https://m.ximalaya.com/">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="16dp"
                        android:tint="#f9cb9c"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_discover_tyq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="居家防护"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="@+id/imageView2" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_common_more_arrow" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    style="@style/PrimaryHLine"
                    android:layout_width="match_parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_dkzb"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:tag="https://m.ximalaya.com/">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="16dp"
                        android:tint="#a4c2f4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_discover_dkzb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="一线新闻"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/imageView3" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_common_more_arrow" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    style="@style/SecondHLine"
                    android:layout_width="match_parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_wd"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:tag="https://m.ximalaya.com/">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="16dp"
                        android:tint="#4a86e8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_discover_wd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="网络热搜"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        app:layout_constraintTop_toTopOf="@+id/imageView4" />

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_common_more_arrow" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageView12"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/discover_avatar1"
                        app:layout_constraintBottom_toBottomOf="@+id/iv1"
                        app:layout_constraintEnd_toStartOf="@+id/iv1"
                        app:layout_constraintTop_toTopOf="@+id/iv1"
                        app:riv_oval="true" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        app:bl_corners_radius="20dp"
                        app:bl_solid_color="#ff0000"
                        app:layout_constraintBottom_toTopOf="@+id/imageView12"
                        app:layout_constraintEnd_toEndOf="@+id/imageView12" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="财富自由，凭啥你就不行？"
                        android:textColor="@color/colorGray"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
                        app:layout_constraintEnd_toStartOf="@+id/imageView12"
                        app:layout_constraintTop_toTopOf="@+id/imageView12" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    style="@style/SecondHLine"
                    android:layout_width="match_parent" />
            </LinearLayout>

        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</layout>